<h1>Articles Tagged with <%= @tag.name.capitalize %></h1>
<p><%= link_to "Delete", tag_path(@tag), method: :delete,
       data: {confirm: "Do you really wanna delete the tag?"}%></p>

<p>
  <% @tag.articles.each do |article| %>
    <%= link_to article.title, article_path(article) %>
  <% end %>
</p>
